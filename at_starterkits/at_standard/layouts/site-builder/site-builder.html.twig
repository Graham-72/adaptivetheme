<div{{ attributes }}>

  {# Remove messages variable when https://www.drupal.org/node/2289917 lands. #}
  {{ messages }}

  {% if messages__regions.active == true %}
  <div{{ messages__attributes }}>
    <div class="regions">
      {{ page.messages }}
    </div>
  </div>
  {% endif %}

  {% if leaderboard__regions.active == true %}
  <div{{ leaderboard__attributes }}>
    <div class="regions">
      {{ page.leaderboard }}
    </div>
  </div>
  {% endif %}

  {% if header__regions.active == true %}
  <header{{ header__attributes }}>
    <div class="regions">
      {{ page.header_first }}
      {{ page.header_second }}
    </div>
  </header>
  {% endif %}

  {% if navbar__regions.active == true %}
  <div{{ navbar__attributes }}>
    <div class="regions">
      {{ page.navbar }}
    </div>
  </div>
  {% endif %}

  {% if features__regions.active == true %}
  <div{{ features__attributes }}>
    <div class="regions">
      {{ page.features_first }}
      {{ page.features_second }}
      {{ page.features_third }}
    </div>
  </div>
  {% endif %}

  {% if tabs %}
    <div class="page-row__temporary-tabs">
      <div class="regions">{{ tabs }}</div>
    </div>
  {% endif %}

  {% if main__regions.active == true %}
  <div{{ main__attributes }}>
    <div class="regions">
      {{ page.highlighted }}
      {{ page.content }}
      {{ page.sidebar_first }}
      {{ page.sidebar_second }}
    </div>
  </div>
  {% endif %}

  {% if tertiary__regions.active == true %}
  <div{{ tertiary__attributes }}>
    <div class="regions">
      {{ page.tertiary_first }}
      {{ page.tertiary_second }}
      {{ page.tertiary_third }}
    </div>
  </div>
  {% endif %}

  {% if footer__regions.active == true %}
  <footer{{ footer__attributes }}>
    <div class="regions">
      {{ page.footer }}
    </div>
  </footer>
  {% endif %}

  {{ attribution }}
</div>
