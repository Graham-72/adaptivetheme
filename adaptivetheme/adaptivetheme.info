
; NOTE - you do not need to enable or modify this theme - instead use
; adaptivetheme_subtheme as a starting point for building your own theme.

;----------// Theme Information
  name        = AT Core
  description = AT Core is the base theme for all Adaptivetheme subthemes.
  core        = 7.x
  engine      = phptemplate
  screenshot  = screenshot.png

;----------// Stylesheets
  stylesheets[all][] = css/base.css
  stylesheets[all][] = css/edit-links.css
  stylesheets[all][] = css/layout.css
  stylesheets[all][] = css/messages.css

;----------// Regions
  regions[sidebar_first]     = Sidebar first
  regions[sidebar_second]    = Sidebar second
  regions[content]           = Main Content
  regions[highlighted]       = Highlighted
  regions[content_aside]     = Aside
  regions[secondary_content] = Secondary
  regions[tertiary_content]  = Tertiary
  regions[footer]            = Footer
  regions[leaderboard]       = Leaderboard
  regions[header]            = Header
  regions[menu_bar]          = Menu Bar
  regions[help]              = Help
  regions[page_top]          = Page top
  regions[page_bottom]       = Page bottom


;----------// Theme Settings

  ; Layout
  settings[layout_type] = 'adaptive'

  ; Smartphone
  settings[smartphone_portrait_layout]                     = 'one-col-stack'
  settings[smartphone_landscape_layout]                    = 'one-col-vert'
  settings[smartphone_sidebar_first_portrait_adaptive]     = '320px'
  settings[smartphone_sidebar_second_portrait_adaptive]    = '320px'
  settings[smartphone_sidebar_first_landscape_adaptive]    = '240px'
  settings[smartphone_sidebar_second_landscape_adaptive]   = '240px'
  settings[smartphone_sidebar_first_portrait_responsive]   = '100%'
  settings[smartphone_sidebar_second_portrait_responsive]  = '100%'
  settings[smartphone_sidebar_first_landscape_responsive]  = '50%'
  settings[smartphone_sidebar_second_landscape_responsive] = '50%'

  ; Tablet
  settings[tablet_portrait_layout]                     = 'two-col-stack'
  settings[tablet_landscape_layout]                    = 'three-col-grail'
  settings[tablet_sidebar_first_portrait_adaptive]     = '180px'
  settings[tablet_sidebar_second_portrait_adaptive]    = '180px'
  settings[tablet_sidebar_first_landscape_adaptive]    = '180px'
  settings[tablet_sidebar_second_landscape_adaptive]   = '180px'
  settings[tablet_sidebar_first_portrait_responsive]   = '50%'
  settings[tablet_sidebar_second_portrait_responsive]  = '50%'
  settings[tablet_sidebar_first_landscape_responsive]  = '20%'
  settings[tablet_sidebar_second_landscape_responsive] = '20%'

  ; Bigscreen
  settings[bigscreen_layout]                    = 'three-col-grail'
  settings[bigscreen_layout_width]              = '960px'
  settings[bigscreen_sidebar_first_adaptive]    = '180px'
  settings[bigscreen_sidebar_second_adaptive]   = '180px'
  settings[bigscreen_sidebar_first_responsive]  = '20%'
  settings[bigscreen_sidebar_second_responsive] = '20%'
  settings[bigscreen_layout_max_width]          = '1260px'

  ; Media queries
  setting[debug_media_queries] = 1

  settings[smartphone_override_media_query]  = 0
  settings[smartphone_landscape_media_query] = 'only screen and (min-width:321px) and (max-width:480px)'
  settings[smartphone_portrait_media_query]  = 'only screen and (max-width:320px)'

  settings[tablet_override_media_query]      = 0
  settings[tablet_landscape_media_query]     = 'only screen and (min-width:769px) and (max-width:1024px)'
  settings[tablet_portrait_media_query]      = 'only screen and (min-width:481px) and (max-width:768px)'

  settings[bigscreen_override_media_query]   = 0
  settings[bigscreen_media_query]            = 'only screen and (min-width:1025px)'

  ; Breadcrumb
  settings[breadcrumb_display]   = 'yes'
  settings[breadcrumb_separator] = ' &#187; '
  settings[breadcrumb_home]      = 1

  ; Search
  settings[display_search_form_label] = 1
  settings[search_snippet]            = 1
  settings[search_info_type]          = 1
  settings[search_info_user]          = 1
  settings[search_info_date]          = 1
  settings[search_info_comment]       = 1
  settings[search_info_upload]        = 1
  settings[search_info_separator]     = ' - '

  ; Login block options
  settings[horizontal_login_block]        = 0
  settings[horizontal_login_block_enable] = 'on'

  ; Style settings
  settings[style_enable_schemes] = 'off'
  settings[style_schemes]        = 'style-default.css'

  ; Extra CSS classes
  settings[extra_page_classes]      = 0
  settings[extra_article_classes]   = 0
  settings[extra_comment_classes]   = 0
  settings[extra_block_classes]     = 0
  settings[extra_menu_classes]      = 0
  settings[extra_item_list_classes] = 0

  ; Extra markup
  settings[menu_item_span_elements] = 0
