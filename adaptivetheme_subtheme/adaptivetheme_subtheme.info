;----------// Theme Information

 ; Change the name and description for your subtheme.

  name        = AT Subtheme
  description = Starter subtheme for Adaptivetheme. Copy and paste this subtheme to get started building your own Drupal theme.


;----------// Required Theme Information

  core       = 6.x
  engine     = phptemplate
  screenshot = screenshot.png
  base theme = adaptivetheme


;----------// Stylesheets

  ; Uncomment if using Gpanels. There are two: 960 Grids based and Fluid.
  ;stylesheets[all][] = css/core/gpanels-960-fixed.css
  ;stylesheets[all][] = css/core/gpanels-fluid.css
	
  ; Dark Theme CSS - uncomment to enable.
  ;stylesheets[all][] = css/core/dark.css

  ; Starter CSS - comment this out if you dont need it, provides basic styles only.
  stylesheets[all][] = css/theme/starter.css
	
  ; Theme CSS - don't rename or move this file.
  stylesheets[all][] = css/theme/theme.css
  

